<div class="container blog" id="blog">
  <h4>A Blog Type Thing</h4>
  <div class="row">
      <% blog.articles.each do |article| %>
        <article class="col s12" style="padding-bottom: 2em;">
          <h5>
            <a href="<%= article.url %>"><%= article.title %></a>
          </h5>
          <time><%= article.date.strftime('%b %e %Y') %></time>

          <%= article.summary(500, '...') %>

          <a href="<%= article.url %>">Read more</a>
        </article>
      <% end %>
  </div>
</div>
